;; ----------------------------------------------------------------------
;; whitespace mode
;; ----------------------------------------------------------------------
(require 'whitespace)
(setq whitespace-style '(trailing tabs tab-mark
                                  indentation
                                  space-before-tab
                                  space-after-tab))


;; configure tab behaviour
(setq tab-width 4)
(setq default-tab-width 4)
(setq indent-tabs-mode nil)
